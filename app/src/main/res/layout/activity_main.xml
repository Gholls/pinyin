<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gholl.pinyin.PinyinTextView
        xmlns:gholl="http://www.gholl.com/"
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray"
        android:text="死死死死死死死死死死死死死死死死死死死死死死死死死死死死死\n滴答滴答滴答滴答滴答滴答滴答滴答滴答\n呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜"
        gholl:marginLeft="20"
        gholl:marginRight="20"
        gholl:paddingLeft="20"
        gholl:paddingRight="20"
        gholl:textColor="#FFFFFF"
        gholl:textSize="30dp"
        gholl:showPinyin="false"
        gholl:pyTextColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button1"
        android:layout_centerInParent="true" />
</RelativeLayout>